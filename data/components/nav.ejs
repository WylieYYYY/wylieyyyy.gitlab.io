<%
  const pagePairs = {
    'Projects': 'projects.html',
    'Demo Info': 'demoinfo.html',
    'Blog': 'blog.html',
    '<code>CODEDUMP</code>': 'codedump/index.html',
  }
%>
<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
  <div class="container-fluid justify-content-start">
    <a class="navbar-brand">
      <img src="/styles/logo.webp" alt="WylieYYYY's Projects" style="width: 10rem; height: 2rem;"/>
    </a>
    <ul class="navbar-nav mr-auto">
      <% for (const [name, path] of Object.entries(pagePairs)) { -%>
        <% if (current === path) { -%>
          <li class="nav-item">
            <a class="nav-link active" href="#"><%- name %><span class="visually-hidden"> (current)</span></a>
        <% } else { -%>
          <li class="nav-item">
            <a class="nav-link" href="/<%= path %>"><%- name %></a>
        <% } -%>
        </li>
      <% } -%>
    </ul>
  </div>
</nav>
